<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Messages</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
      body {
        background-color: #FFFF; /* Western yellow */
        color: #4B2E23; /* Dark brown text */
        font-family: 'Playfair Display', serif;
        margin: 0;
        padding: 0;
      }
      h1, h2 {
        color: #8B4513; /* Saddle brown headings */
        text-shadow: 1px 1px #4B2E23;
        text-transform: uppercase;
      }
      table {
        border: 2px solid #4B2E23;
        border-collapse: collapse;
        width: 100%;
      }
      th, td {
        border: 1px solid #4B2E23;
        padding: 10px;
        text-align: left;
        background-color: #F9F5E3; /* Light beige */
        color: #4B2E23; /* Dark brown */
      }
      th {
        background-color: #4B2E23; /* Dark brown */
        color: #FFF; /* White */
        text-transform: uppercase;
      }
      p {
        color: #4B2E23;
      }
    </style>
  </head>
  <body>
    <div class="container mt-5">
      <h1 class="text-center">Messages for {{username}}</h1>

      <h2 class="mt-4">Received Messages</h2>
      {{#if receivedMessages}}
        <table class="table table-striped table-hover mt-3">
          <thead>
            <tr>
              <th>From</th>
              <th>Title</th>
              <th>Message</th>
            </tr>
          </thead>
          <tbody>
            {{#each receivedMessages}}
            <tr>
              <td>{{sender_name}}</td>
              <td>{{title}}</td>
              <td>{{message_text}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      {{else}}
        <p class="mt-3">No Received Messages</p>
      {{/if}}

      <h2 class="mt-5">Sent Messages</h2>
      {{#if sentMessages}}
        <table class="table table-striped table-hover mt-3">
          <thead>
            <tr>
              <th>To</th>
              <th>Title</th>
              <th>Message</th>
            </tr>
          </thead>
          <tbody>
            {{#each sentMessages}}
            <tr>
              <td>{{receiver_name}}</td>
              <td>{{title}}</td>
              <td>{{message_text}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      {{else}}
        <p class="mt-3">No Sent Messages</p>
      {{/if}}
    </div>
  </body>
</html>
