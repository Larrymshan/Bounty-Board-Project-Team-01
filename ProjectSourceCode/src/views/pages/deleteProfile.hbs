{{> message}}

<h2 class="text-center" style="color: #8B4513; text-shadow: 1px 1px #4B2E23;">Delete Account</h2>
<div class="d-flex justify-content-center">
    <form method="POST" action="/deleteProfile" style="background-color: rgba(244, 241, 233, 0.95); padding: 20px; border: 3px solid #8B4513; border-radius: 10px; box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.4);">
        <div class="form-group mb-3">
            <label for="password" style="color: #8B4513; font-weight: bold; text-transform: uppercase;">Password:</label>
            <input 
                class="form-control" 
                name="password" 
                id="password" 
                placeholder="Enter your password..." 
                required 
                style="border: 2px solid #4B2E23; background-color: #F9F5E3; color: #4B2E23; font-weight: bold;">
        </div>
        
        <div class="form-group mb-3">
            <label for="password2" style="color: #8B4513; font-weight: bold; text-transform: uppercase;">Retype Password:</label>
            <input 
                class="form-control" 
                name="password2" 
                id="password2" 
                placeholder="Retype your password..." 
                required 
                style="border: 2px solid #4B2E23; background-color: #F9F5E3; color: #4B2E23; font-weight: bold;">
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-danger w-100" style="background-color: #B22222; border-color: #8B4513; color: #FFF; font-weight: bold; text-transform: uppercase;">Delete Account</button>
        </div>

        <p class="mt-3" style="color: #4B2E23;">If you do not want to delete your account, click <a href="/home" style="color: #8B4513; font-weight: bold;">here</a> to go back.</p>
    </form>
</div>
