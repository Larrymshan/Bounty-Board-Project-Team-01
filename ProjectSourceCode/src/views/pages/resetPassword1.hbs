{{> message}}

<h2 class="text-center" style="color: #f4dbc9; text-shadow: 1px 1px #4B2E23;">Reset Password</h2>
<div class="d-flex justify-content-center">
    <form method="POST" action="/resetPassword1" style="background-color: rgba(244, 241, 233, 0.95); padding: 20px; border: 3px solid #8B4513; border-radius: 10px; box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.4); width: 100%; max-width: 400px;">
        <div class="form-group mb-3">
            <label for="username" style="color: #8B4513; font-weight: bold; text-transform: uppercase;">Email:</label>
            <input
                class="form-control"
                type="email"
                name="username"
                id="username"
                placeholder="email..."
                required
                title="Please enter your email to receive a code!"
                style="border: 2px solid #4B2E23; background-color: #F9F5E3; color: #4B2E23; font-weight: bold;"
            />
        </div>
        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary w-100" style="background-color: #4B2E23; border-color: #8B4513; color: #FFF; font-weight: bold; text-transform: uppercase;">Get Code</button>
        </div>
        <p class="mt-3" style="color: #4B2E23;">Click <a href="/login" style="color: #8B4513; font-weight: bold;">here</a> to login</p>
    </form>
</div>
