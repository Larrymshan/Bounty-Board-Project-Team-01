<div class="container mt-5">
    <!-- Page Title -->
    <h1 class="text-center mb-4" style="color: #8B4513; text-shadow: 1px 1px #4B2E23;">Your Reviews</h1>

    <!-- Back to Home Button -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a class="btn btn-secondary" href="/home" style="background-color: #8B4513; border-color: #4B2E23; color: #FFF; font-weight: bold;">Back to Home</a>
    </div>

    <!-- Reviews Table -->
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark" style="background-color: #4B2E23; color: #FFF;">
                <tr>
                    <th scope="col">You Reviewed</th>
                    <th scope="col">Review Comment</th>
                    <th scope="col">Review Score</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each reviews}}
                <tr style="background-color: #FFFF; color: #4B2E23;">
                    <td>{{user_reviewed}}</td>
                    <td>{{review_text}}</td>
                    <td>{{rating}}</td>
                    <td>
                        <!-- Delete Review Form -->
                        <form method="POST" action="/reviewsByMe" class="d-inline">
                            <input type="hidden" name="review_id" value="{{review_num}}">
                            <button type="submit" class="btn btn-outline-danger btn-sm"
                                onclick="return confirm('Are you sure you want to delete this review?');"
                                style="border-color: #8B4513; color: #B22222;">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <!-- Total Reviews Message -->
    {{#if reviews.length}}
    <p class="text-muted text-end mt-3" style="color: #4B2E23;">Total reviews: {{reviews.length}}</p>
    {{else}}
    <p class="text-center text-muted mt-4" style="color: #4B2E23;">You haven't reviewed anyone yet. Start now!</p>
    {{/if}}
</div>
