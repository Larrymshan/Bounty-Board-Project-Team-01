<form method="POST" action="/CreateBounty" class="container mt-5" style="background-color: rgba(244, 241, 233, 0.95); padding: 20px; border: 3px solid #8B4513; border-radius: 10px; box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.4);">
    <div class="row mb-3">
        <label for="title" class="form-label col-12" style="color: #8B4513; font-weight: bold; text-transform: uppercase;">Title of Job</label>
        <input type="text" class="form-control col-12" id="title" name="title" required style="border: 2px solid #4B2E23; background-color: #F9F5E3; color: #4B2E23; font-weight: bold;">
    </div>

    <div class="row mb-3">
        <label for="desc" class="form-label col-12" style="color: #8B4513; font-weight: bold; text-transform: uppercase;">Description of Job</label>
        <textarea class="form-control col-12" id="desc" name="job_description" rows="4" required style="border: 2px solid #4B2E23; background-color: #F9F5E3; color: #4B2E23; font-weight: bold;"></textarea>
    </div>

    <div class="row mb-3 mt-3">
        <label for="price" class="form-label col-12" style="color: #8B4513; font-weight: bold; text-transform: uppercase;">Enter a Value</label>
        <input 
            type="number" 
            class="form-control col-12 text-center" 
            id="price" 
            name="price" 
            value="0" 
            min="0" 
            step="1" 
            required 
            style="border: 2px solid #4B2E23; background-color: #F9F5E3; color: #4B2E23; font-weight: bold; text-align: center;">
    </div>

    <div class="row mt-3">
        <button type="submit" class="btn btn-primary col-12" style="background-color: #4B2E23; border-color: #8B4513; color: #FFF; font-weight: bold; text-transform: uppercase;">Create Bounty</button>
    </div>
</form>
