{{> message}}

<h2 class="text-center" style="color: #8B4513; text-shadow: 1px 1px #4B2E23;">Create Account</h2>
<div class="d-flex justify-content-center">
    <form method="POST" action="/createProfile" style="background-color: rgba(244, 241, 233, 0.95); padding: 20px; border: 3px solid #8B4513; border-radius: 10px; box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.4);">
        <input type="hidden" name="userName" value="{{userName}}">

        <div class="form-group mb-3">
            <label for="first_name" style="color: #8B4513; font-weight: bold; text-transform: uppercase;">First Name:</label>
            <input 
                type="text"
                name="first_name"
                id="first_name"
                class="form-control"
                placeholder="First name ..."
                required
                title="Please enter your first name"
                style="border: 2px solid #4B2E23; background-color: #F9F5E3; color: #4B2E23; font-weight: bold;">
        </div>

        <div class="form-group mb-3">
            <label for="last_name" style="color: #8B4513; font-weight: bold; text-transform: uppercase;">Last Name:</label>
            <input 
                type="text"
                name="last_name"
                id="last_name"
                class="form-control"
                placeholder="Last name ..."
                required
                title="Please enter your last name"
                style="border: 2px solid #4B2E23; background-color: #F9F5E3; color: #4B2E23; font-weight: bold;">
        </div>

        <div class="form-group mb-3">
            <label for="bio" style="color: #8B4513; font-weight: bold; text-transform: uppercase;">Bio:</label>
            <textarea 
                name="bio"
                id="bio"
                class="form-control"
                placeholder="Write your bio here ..."
                rows="4"
                required
                title="Tell us more about yourself"
                style="border: 2px solid #4B2E23; background-color: #F9F5E3; color: #4B2E23; font-weight: bold;"></textarea>
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary w-100" style="background-color: #4B2E23; border-color: #8B4513; color: #FFF; font-weight: bold; text-transform: uppercase;">Register</button>
        </div>

        <p class="mt-3" style="color: #4B2E23;">Click <a href="/login" style="color: #8B4513; font-weight: bold;">here</a> to login</p>
    </form>
</div>
